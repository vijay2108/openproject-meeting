body { font-family: 'Open Sans' }

.meetings div.meeting {padding-bottom: 1em;}
div.meeting_content {padding-bottom: 2em;}
div.meetings_by_date {padding: 1em 0 1em 0em;}
dl.meetings p, div#activity dl.meetings dd, div#activity dl.meetings dt {padding: 0;}
dl.meetings {margin-bottom: 2em;}
dt.meeting {margin-bottom: 1.5em;}
dl.meetings p {margin-bottom: 0.75em;}

.meeting.details p {
  margin: 0;
}

.meeting.details .block--author {
  display: flex;
  align-items: flex-start;
  margin-bottom: 1rem;
}

.meeting.details .block--author .avatar ~ .author {
  margin-left: 10px;
}

div.tabular > div { margin: 0;
  padding: 5px 0 8px 0;
  padding-left: 180px; /*width of left column containing the label elements*/
  height: 1%;
  clear:left;
}

#meeting_agenda_preview fieldset {margin-top: 1em; background: url(<%= asset_path 'draft.png' %>);}
#meeting_minutes_preview fieldset {margin-top: 1em; background: url(<%= asset_path 'draft.png' %>);}

div.flash.notice a.link_to_profile {
  cursor:pointer;
  color: #008BD0;
}

div.flash.notice a.link_to_profile:hover {
  text-decoration: underline;
}

.fc-view-container{
  background: #fff;
}
.fc-header-toolbar .fc-left h2{
  font-size: 24px;
  font-weight: 600;
}
.fc-right .fc-button-group:first-child{
    background: #41A3F3;
    height: 30px;
    padding: 1px;
    border-radius: 4px;
}
.fc-right .fc-button-group:first-child .fc-button{
  background: transparent;
  font-size: 12px;
  color: rgba(255,255,255,0.5);
  text-shadow: none;
  box-shadow: none;
  width: 80px;
  height: 28px;
  border: 0;
}
.fc-right .fc-button-group:first-child .fc-button.fc-state-active{
  background: #FAFCFD;
  color: #3C96DF;
  border-radius: 3px;
}
.fc-right .fc-button-group:last-child .fc-button{
  background: transparent;
  height: 30px;
  border: 0;
  box-shadow: none;
  padding: 0;
}
.fc-unthemed th, .fc-unthemed td, .fc-unthemed thead, .fc-unthemed tbody, .fc-unthemed .fc-divider, .fc-unthemed .fc-row, .fc-unthemed .fc-content, .fc-unthemed .fc-popover, .fc-unthemed .fc-list-view, .fc-unthemed .fc-list-heading td {
    border-color: rgba(112,112,112,0.08);
}
.fc-head-container th{
  background: rgba(233,236,242,0.48);
  color: rgba(64,64,64,0.5);
  height: 33px;
  font-size: 12px;
  font-weight: 600;
  vertical-align: middle;  
  text-transform: uppercase;
}
.fc-day-header.fc-today{
  color: #41A3F3;
  font-weight: 700;
}
.fc-unthemed td.fc-today {
    background: rgba(232,244,254,0.44);
}
.fc-event{
  background: #fff;
  border: 0;
  border-left: 3px solid #F06F64;
  border-radius: 0;
  padding: 5px 5px 5px 7px;
  color: #404040;
}
.fc-event:hover{
  color: #404040;
}
