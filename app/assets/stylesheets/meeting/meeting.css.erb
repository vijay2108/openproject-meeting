.switch-buttons label {
  margin: 0;
  line-height: normal; }

.switch {
  opacity: 0;
  position: absolute;
  z-index: 1;
  width: 18px;
  height: 18px;
  cursor: pointer; }
  .switch + .lable {
    position: relative;
    display: inline-block;
    margin: 0;
    cursor: pointer; }
    .switch + .lable::before {
      font-weight: normal;
      font-size: 8px;
      line-height: 17px;
      height: 24px;
      overflow: hidden;
      border-radius: 15px;
      display: block;
      -webkit-transition: text-indent 0.3s ease;
      -o-transition: text-indent 0.3s ease;
      transition: text-indent 0.3s ease;
      top: auto; }
  .switch.switch-input + .lable::before {
    content: "";
    text-transform: uppercase;
    box-shadow: none;
    font-size: 8px;
    font-weight: 700;
    background-color: #e8e8e8;
    color: #b9b9b9;
    width: 24px;
    height: 16px;
    -webkit-transition: background 0.1s ease;
    -o-transition: background 0.1s ease;
    transition: background 0.1s ease;
    text-indent: 22px;
    padding: 3px 0; }
  .switch.switch-input + .lable::after {
    content: "";
    position: absolute;
    top: 3px;
    left: 3px;
    border-radius: 50%;
    text-align: center;
    -webkit-transition: left 0.2s ease;
    -o-transition: left 0.2s ease;
    transition: left 0.2s ease;
    width: 10px;
    height: 10px;
    background-color: #fff;
    filter: drop-shadow(0px 1px 3px rgba(0, 0, 0, 0.3)); }
  .switch.switch-input:checked + .lable::before {
    content: "";
    text-indent: 6px;
    color: #FFF; }

/*  on/off switches */
.switch-info > .switch.switch-input:checked + .lable::before {
  background-color: #5abe2b; }

.switch.switch-input:checked + .lable::after {
  left: 11px;
  background-color: #FFF;
  border: 4px solid #FFF;
  text-shadow: 0 -1px 0 rgba(0, 200, 0, 0.25); }

